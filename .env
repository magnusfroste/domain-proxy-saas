# =============================================================================
# DomainProxy SaaS Starter - Production Environment
# =============================================================================

NODE_ENV=production
PORT=3001

# -----------------------------------------------------------------------------
# Demo Mode for VPS Deployment
# -----------------------------------------------------------------------------
ENABLE_VPS_DEMO=true

# -----------------------------------------------------------------------------
# DomainProxy Configuration
# -----------------------------------------------------------------------------
# Use the cloud proxy service
DOMAINPROXY_URL=https://proxy.froste.eu
DOMAINPROXY_API_KEY=saas_demo_123

# -----------------------------------------------------------------------------
# Your SaaS Configuration
# -----------------------------------------------------------------------------
# Public URL where this SaaS is deployed (DomainProxy will proxy to this)
SAAS_URL=https://saasdemo.froste.eu

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
DEMO_EMAIL=demo@example.com
DEMO_PASSWORD=demo123
SESSION_SECRET=domainproxy-saas-production-secret-key-change-in-production


